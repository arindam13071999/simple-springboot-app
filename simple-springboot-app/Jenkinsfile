pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Build') {
            steps {
                dir('simple-springboot-app') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Docker') {
            steps {
                dir('simple-springboot-app') {
                sh 'docker build -t arindamstingo/SpringApp:${BUILD_NUMBER} -f simple-springboot-app/Dockerfile simple-springboot-app/'

                sh 'docker login -u arindamstingo -p Sting1999@'
                    sh 'docker push arindamstingo/SpringApp:${BUILD_NUMBER}'
                }
            }
        }
    }
}
